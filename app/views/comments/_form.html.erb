<%= form_for comment, url: action == :new ? create_comment_path(article_id: article.id) : edit_comment_path(comment) do |f| %>
	<%= f.field :content, input: :text_area, label: action_is?(:edit, :update) ? 'Commentaire' : 'Ajoutez un commentaire' %>

	<div class="actions">
		<% unless comment.id.nil? || !is_current_user?(or: :admin) %>
			<%= link_to 'Supprimer', destroy_comment_path(comment.id), class: :sensible %>
		<% end %>
		<%= f.submit 'Soumettre' %>
	</div>
<% end %>
