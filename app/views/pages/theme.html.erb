<div class="sub sub-theme" style="background: <%= @theme.color %>">
	<div class="wrapper">
		<%= link_to '', root_path, class: :back %>
		<%= @theme.name %>
	</div>
</div>
<main>
	<div class="wrapper">
		<nav class="labels">
			<% if @issues.length == 0 %>
				<p class="empty">Il n'y a pas encore de problématique dans ce thème</p>
			<% else %>
				<% @issues.each.with_index do |issue, i| %>
					<% if i%2 == 0 %>
						<div class="row">
					<% end %>
					<div class="col">
						<%= link_to issue.content, issue_page_path(issue.id) %></li>
					</div>
					<% if i%2 == 1 || i+1 >= @issues.length %>
						</div>
					<% end %>
				<% end %>
			<% end %>
		</nav>
	</div>
</main>
<% if params.key? :transition %>
	<%= splash @theme.rgb %>
<% end %>
