<main>
	<div class="wrapper">
		<table>
			<% @themes.each do |theme| %>
				<tr>
					<td>
						<%= content_tag :a, href: issues_path(theme.id) do %>
							<%= image_tag theme.image.url(:medium) %>
							<%= theme.name %>
							<div class="right">
								<span><%= theme.issues_label %></span>
								<span><%= theme.articles_label %></span>
							</div>
						<% end %>
					</td>
					<td class="actions">
						<%= link_to 'Modifier', edit_theme_path(theme.id) %>
						<%= link_to 'Supprimer', destroy_theme_path(theme.id) %>
					</td>
				</tr>
			<% end %>
		</table>
