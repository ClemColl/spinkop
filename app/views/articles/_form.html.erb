<%= form_for article, url: post_article_path(article) do |f| %>

	<%= f.field :issue, input: :text_field, label: 'ProblÃ©matique' %>
	<%= f.hidden_field :issue_id %>

	<%= f.field :tag, input: :text_field, label: 'Ajouter un tag' %>
	<div class="tags">
		<% article.tags.each.with_index do |tag, i| %>
			<span><%= tag.name %><%= hidden_field_tag "article[tag_ids][#{i}]", tag.id %></span>
		<% end %>
	</div>

	<div class="field image">
		<%= f.file_field :image %>
		<% if article.image.exists? %>
			<div>
				<div class="overlay" style="background: rgba(<%= @theme.rgb(-50).join(',') %>, 0.5)"></div>
				<%= image_tag article.image.url(:cover) %>
			</div>
		<% end %>
	</div>

	<%= f.field :title, input: :text_field, label: 'Titre', placeholder: 'Facultatif', maxlength: 60 %>
	<%= f.field :content, input: :text_area, label: 'Contenu' %>

	<div class="actions">
		<% unless article.id.nil? %>
			<%= link_to 'Supprimer', destroy_article_path(article.id), class: :sensible %>
		<% end %>
		<%= f.submit 'Enregistrer' %>
	</div>
<% end %>

<% javascript '/vendor/tinymce/tinymce.min.js' %>
