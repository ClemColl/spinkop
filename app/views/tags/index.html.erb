<main>
	<div class="wrapper">
		<table>
			<% @tags.each do |tag| %>
				<tr>
					<td><%= link_to tag.name, edit_tag_path(tag.id) %></td>
					<td class="actions">
						<%= link_to 'Supprimer', destroy_tag_path(tag.id) %>
					</td>
				</tr>
			<% end %>
		</table>
		<div class="actions">
			<%= link_to 'Ajouter un tag', new_tag_path %>
		</div>
	</div>
</main>
